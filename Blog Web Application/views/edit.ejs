<%- include('partials/header.ejs') %>
<edit>
  <div class="container">
    <div class="bd-edit m-0 border-0">
      <div class="mb-3">
        <label for="formControlInput2" class="form-label">Blog Title</label>
        <input type="text" class="form-control" id="formControlInput2" value="<% if(locals.passedData) { %><%=locals.passedData.title%><% } else { %>NaN<% } %>">
      </div>
      <div class="mb-3">
        <label for="formControlTextarea" class="form-label">Blog Body</label>
        <div id="editor">
          <% if(locals.passedData) { %><%- locals.passedData.body %><% } else { %>NaN<% } %>
        </div>
      </div>
      <div class="mb-3">
        <label for="formControlInput1" class="form-label">Blogger Name</label>
        <input type="text" class="form-control" id="formControlInput1" value="<% if(locals.passedData) { %><%=locals.passedData.name%><% } else { %>NaN<% } %>" aria-label="Disabled input example" disabled readonly>
      </div>
      <div id="inputButton">
        <button type="button" class="btn btn-success btn-md px-4 gap-3" blogId="<% if(locals.passedData) { %><%=locals.passedData.id%><% } %>" id="appendButton">
          Save
        </button>
      </div>
    </div>
  </div>
</edit>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
<!-- Main Quill library -->
<%- include('partials/quill.ejs') %>
<script src="scripts/util.js" charset="utf-8"></script>
</body>
</html>